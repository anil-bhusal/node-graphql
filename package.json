{
  "name": "express-ts-graphql",
  "version": "1.0.0",
  "description": "A project setup with Express.js, TypeScript, GraphQL, PostgreSQL, and TypeORM",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "prebuild": "rimraf dist",
    "test": "echo \"Write tests!\" && exit 0",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "migrate:run": "typeorm migration:run",
    "migrate:revert": "typeorm migration:revert",
    "typeorm": "typeorm"
  },
  "dependencies": {
    "express": "^4.18.2",
    "graphql": "^15.5.0",
    "express-graphql": "^0.12.0",
    "pg": "^8.8.0",
    "typeorm": "^0.3.16",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {}
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}